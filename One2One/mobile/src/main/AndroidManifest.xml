<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.pperotti.android.one2one"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- android:name="com.orm.SugarApp" -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".base.One2OneApp"
        android:theme="@style/AppTheme">

        <meta-data android:name="DATABASE" android:value="one2one.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.pperotti.android.one2one" />

        <activity android:name=".home.view.controller.activity.HomeActivity"
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".task.view.controller.activity.NewTaskActivity"/>
        <activity android:name=".contacts.controller.fragment.ContactListActivity"/>
    </application>

</manifest>